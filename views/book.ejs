  <h1>Booking Page</h1>
  <div class="books">
   <!-- User's email automatically filled from session -->
   <label for="email">Email:</label>
   <input type="email" id="email" name="email" value="<%= userEmail %>" readonly><br><br>


  <!-- Ground is pre-selected, so we display it -->
  <form action="/confirm-booking" method="POST">
    <label for="ground">Ground:</label>
    <input type="text" id="ground" name="ground" placeholder="Enter Ground Name" ><br><br>


    <!-- Time Slot Selection -->
    <label for="timeSlot">Select Time Slot:</label>
    <select id="timeSlot" name="timeSlot" required>
      <option value="07:00-08:30">7:00 AM - 8:30 AM</option>
      <option value="08:30-10:00">8:30 AM - 10:00 AM</option>
      <option value="10:00-11:30">10:00 AM - 11:30 AM</option>
      <option value="11:30-01:00">11:30 AM - 1:00 PM</option>
      <option value="01:00-02:30">1:00 PM - 2:30 PM</option>
      <option value="02:30-04:00">2:30 PM - 4:00 PM</option>
      <option value="04:00-05:30">4:00 PM - 5:30 PM</option>
      <option value="05:30-07:00">5:30 PM - 7:00 PM</option>
      <option value="07:00-08:30">7:00 PM - 8:30 PM</option>
    </select><br><br>

    <!-- Date Picker (today's date by default) -->
    <label for="date">Date:</label>
    <input type="date" id="date" name="date" value="<%= currentDate %>" required><br><br>

    
   <label for="createdAt">Booking Created At:</label>
        <input type="text" id="createdAt" name="createdAt" value="<%= currentDate %>" readonly><br><br>

    <!-- Submit Button -->
    <button class="Buttonn" type="submit">Confirm Booking</button>
  </form>

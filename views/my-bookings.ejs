</head>
<body>

    <header>
        <nav>
            <div class="logo">
                <img src="./images/homelog.gif" alt="Your Logo">
            </div>
            <div class="search">
              <input type="text" placeholder="Search...">
              <button><i class="fa-solid fa-magnifying-glass"></i></button>
              </div>
                <div class="navbar">
                <ul>
                  <li><a href="logedIn.html">Home</a></li>
                  <li><a href="#">Services</a></li>
                  <li><a href="about.html">Contact</a></li>
                    <div class="btn-group">
                        <button type="button" class=" dropdown-toggle drpbtn" data-bs-toggle="dropdown" >
                                        <li><a href=""><i class="fa-solid fa-user"></i></a></li>                               
                        </button>
                        <ul class="dropdown-menu">
                          <li><a class="dropdown-item" href="#">Your Profile</a></li>
                          <li><a class="dropdown-item" href="#">You booking</a></li>
                          <li><a class="dropdown-item" href="#">Settings</a></li>
                         
                          <li><a class="dropdown-item" href="#">Log Out</a></li>
                        </ul>
                      </div>
                </ul>
                </div>
            </div>
        </nav>
       
    </header>

  <h1>My Bookings</h1>

  <h2>Welcome, <%= userEmail %>!</h2>

  <% if (bookings.length > 0) { %>
    <table border="1">
      <thead>
        <tr>
          <th>Ground</th>
          <th>Time Slot</th>
          <th>Date</th>
          <th>Booking Date</th>
        </tr>
      </thead>
      <tbody>
        <% bookings.forEach(booking => { %>
          <tr>
            <td><%= booking.ground %></td>
            <td><%= booking.timeSlot %></td>
            <td><%= booking.date %></td>
            <td><%= booking.createdAt %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <p>You have no bookings yet.</p>
  <% } %>
  <footer>
    <div class="footer-container">
        <div class="logo-section">
            <img src="./Game images/WhatsApp Image 2024-11-01 at 21.22.49_e1c8eeee - Copy.jpg" alt="Logo">
        </div>

        <div class="links-section">
            <ul>
                <li><a href="#">Weebly Themes</a></li>
                <li><a href="#">Pre-Sale FAQs</a></li>
                <li><a href="#">Submit a Ticket</a></li>
            </ul>
            <ul>
                <li><a href="#">Services</a></li>
                <li><a href="#">Theme Tweak</a></li>
            </ul>
